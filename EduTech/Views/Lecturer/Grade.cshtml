@{
    ViewData["Title"] = "Chấm điểm";
}

@model GradeViewModel

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("ClassList", "Class", new { id = Model.ClassId })" class="text-decoration-none">
                    <i class="bi bi-house-door"></i> Trở về danh sách lớp
                </a>
            </li>

        </ol>
    </nav>

    <form asp-action="Grade" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ClassId" />
        <input type="hidden" asp-for="StudentId" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="AssignmentType" class="form-label">
                    <i class="bi bi-list-check me-2"></i>Loại điểm
                </label>
                <select asp-for="AssignmentType" class="form-select" required>
                    <option value="">Chọn</option>
                    <option value="Midterm">Điểm giữa kì</option>
                    <option value="Final">Điểm cuối kì</option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="Score" class="form-label">
                    <i class="bi bi-star-fill me-2"></i>Điểm
                </label>
                <input asp-for="Score" type="number" class="form-control" step="0.01" min="0" max="10" required />
                </div>
        </div>
        <div class="mb-3">
            <label asp-for="Comments" class="form-label">
                <i class="bi bi-chat-left-text me-2"></i>Nhận xét
            </label>
            <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-save me-2"></i>Lưu thông tin
            </button>
            <button type="reset" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-counterclockwise me-2"></i>Đặt lại
            </button>
        </div>
    </form>
</div>