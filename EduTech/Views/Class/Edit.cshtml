@{
    ViewData["Title"] = "Sửa lớp học";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-primary mb-3">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <h2 class="mb-0">Sửa lớp học</h2>
                        </div>
                    </div>

                    <form method="post" asp-action="Edit" asp-controller="Class">
                      
                        <div  class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <!-- Tên lớp -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input  class="form-control" id="className" placeholder="Nhập tên lớp">
                                    <label>Tên lớp</label>
                                    <span  class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Môn học -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" id="subject">
                                        <option value="">Chọn môn học</option>
                                    </select>
                                    <label >Môn học</label>
                                    <span  class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Phòng học -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input  class="form-control" id="classroom" placeholder="Nhập tên phòng học">
                                    <label >Phòng học</label>
                                    <span  class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Sĩ số lớp -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" min="1" class="form-control" id="classSize" placeholder="Nhập sĩ số">
                                    <label >Sĩ số lớp</label>
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Lịch học -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" id="schedule">
                                        <option>Chọn lịch học</option>
                                    </select>
                                    <label>Lịch học</label>
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Giờ học -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="time" class="form-control" id="startTime">
                                    <label >Giờ bắt đầu học</label>
                                    <span  class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input  type="time" class="form-control" id="endTime">
                                    <label >Giờ kết thúc lớp học</label>
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Ngày khai giảng & bế giảng -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input  type="date" class="form-control" id="startDate">
                                    <label>Ngày khai giảng</label>
                                    <span  class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input  type="date" class="form-control" id="endDate">
                                    <label>Ngày bế giảng</label>
                                    <span  class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-sm w-auto">
                                <i class="bi bi-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>