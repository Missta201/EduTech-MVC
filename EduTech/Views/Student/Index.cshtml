@{
    ViewData["Title"] = "Danh sách học viên";
    int i = 1;
}


@model IEnumerable<ApplicationUser>

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Dashboard")" class="text-decoration-none">
                    <i class="bi bi-house-door"></i> Back to Dashborad
                </a>
            </li>

        </ol>
    </nav>

    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="card-title">Danh sách học viên</h2>
                <a href="@Url.Action("Add", "Student")" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Thêm học viên
                </a>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Tìm kiếm học viên...">
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>STT</th>
                            <th>Tên học viên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach(var user in Model) {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@user.Name</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-primary me-2" href="@Url.Action("Edit", "Student")">
                                            <i class="bi bi-pencil"></i> Sửa
                                        </a>
                                        <form method="post" action="@Url.Action("Delete", "Student")" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="Id" value="" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


