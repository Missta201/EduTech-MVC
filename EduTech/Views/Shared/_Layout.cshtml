@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EduTech</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', Arial, Helvetica, 'Nimbus Sans L', sans-serif;
        }

        /* Top Bar */
        .top-bar {
            background-color: rgb(0, 63, 136);
            color: white;
            font-size: 0.9rem;
        }

            .top-bar .social-icon,
            .top-bar .text-decoration-none {
                color: white;
                text-decoration: none;
                margin-left: 10px;
            }

                .top-bar .social-icon:hover {
                    color: #ccc;
                }

            .top-bar a {
                transition: color 0.2s ease;
            }

                .top-bar a:hover {
                    color: #ccc !important;
                }

        /* Navbar */
        .navbar-light .navbar-nav .nav-link {
            color: #333;
            font-weight: 500;
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color: rgb(0, 63, 136);
            }

        /* Search Box */
        .search-box {
            max-width: 200px;
        }

            .search-box .form-control {
                height: calc(1.5em + 0.75rem + 2px);
            }

            .search-box .btn {
                padding: 0.25rem 0.5rem;
            }

        /* Footer */
        .footer {
            background-color: #f8f9fa;
            font-size: 0.9rem;
        }

        .btn-sm {
            padding: 0.4rem 0.8rem;
            font-size: 0.875rem;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar py-2">
        <div class="container">
            <div class="d-flex justify-content-end align-items-center gap-3">
                <a href="#" class="text-white text-decoration-none">Cổng thanh toán học phí</a>
                <a href="#" class="text-white text-decoration-none">Liên hệ</a>
                <a href="#" class="social-icon">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="#" class="social-icon">
                    <i class="bi bi-linkedin"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Main Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="@Url.Content("../wwwroot/logo.png")" alt="EduTech Logo" height="40">
            </a>

            <!-- Mobile Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Content -->
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link px-3" href="#">GIỚI THIỆU</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" href="#">THÔNG BÁO</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" href="#">KHÓA HỌC</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" href="#">TRA CỨU KẾT QUẢ THI</a>
                    </li>
                    @* <li class="nav-item">
                    <a class="nav-link px-3" href="#">HỖ TRỢ GV/HV</a>
                    </li> *@
                </ul>

                <!-- Search and Login -->
                <div class="d-flex align-items-center gap-2">
                    <div class="input-group search-box me-2">
                        <input type="search" class="form-control" placeholder="Search">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-primary btn-sm">ĐĂNG NHẬP</a>
                    <a href="@Url.Action("Register", "Auth")" class="btn btn-primary btn-sm">ĐĂNG KÝ</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer text-muted mt-4 py-3 border-top">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - EduTech - <a href="@Url.Action("Privacy", "Home")">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
