@{
    ViewData["Title"] = "Sửa học viên";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <a href="@Url.Action("Index", "Student")" class="btn btn-outline-primary mb-3">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <h2 class="mb-0">Thêm học viên</h2>
                        </div>
                    </div>

                    <form method="post" asp-action="Edit" asp-controller="Student">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <!-- Tên lớp -->
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input class="form-control" placeholder="Nhập tên học viên">
                                    <label>Tên học viên</label>
                                    <span class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input class="form-control" placeholder="Nhập địa chỉ email">
                                    <label>Email</label>
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input class="form-control" placeholder="Nhập số điện thoại">
                                    <label>SĐT</label>
                                    <span class="text-danger"></span>
                                </div>
                            </div>

                        </div>


                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-save me-2"></i>Lưu thay đổi
                            </button>
                        </div>




                    </form>
                </div>
            </div>
        </div>
    </div>
</div>