@{
    ViewData["Title"] = "Dashboard";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - EduTech</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 260px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: #fff;
            border-right: 1px solid #dee2e6;
            padding: 1rem;
        }

        .main-content {
            margin-left: 260px;
            padding: 1rem;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            text-decoration: none;
            margin-bottom: 1rem;
            display: block;
        }

        .search-box {
            position: relative;
            margin-bottom: 1.5rem;
        }

            .search-box i {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                color: #6c757d;
            }

        .search-input {
            padding-left: 35px;
            border-radius: 5px;
            border: 1px solid #dee2e6;
        }

        .nav-section {
            margin-bottom: 1.5rem;
        }

        .nav-section-title {
            font-size: 0.875rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }

        .nav-link {
            color: #333;
            padding: 0.5rem;
            display: flex;
            align-items: center;
            border-radius: 5px;
        }

            .nav-link:hover {
                background-color: #f8f9fa;
            }

            .nav-link i {
                margin-right: 10px;
            }

        .stats-card {
            background: white;
            border-radius: 10px;
            padding: 1.5rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

        .stats-title {
            color: #6c757d;
            font-size: 1.25rem;
            margin-bottom: 1rem;
        }

        .stats-number {
            color: #333;
            font-size: 2.5rem;
            font-weight: bold;
        }

        .stats-icon {
            font-size: 2.5rem;
            color: #6c757d;
        }

        .user-menu {
            position: fixed;
            top: 1rem;
            right: 1rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#" class="logo">EduTech</a>

        

        <div class="nav-section">
            <div class="nav-section-title">Contents Management</div>
            <nav class="nav flex-column">
                <a class="nav-link" href="#"><i class="bi bi-grid"></i> Dashboard</a>
                <a class="nav-link" href="@Url.Action("Main", "Course")"><i class="bi bi-book"></i> Khoá học</a>
                <a class="nav-link" href="@Url.Action("Add", "Class")"><i class="bi bi-mortarboard"></i> Lớp học</a>
            </nav>
        </div>

        <div class="nav-section">
            <div class="nav-section-title">User Management</div>
            <nav class="nav flex-column">
                <a class="nav-link" href="#"><i class="bi bi-people"></i> Học viên</a>
                <a class="nav-link" href="#"><i class="bi bi-person-video3"></i> Giảng viên</a>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- User Menu -->
        <div class="user-menu">
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown">
                    JE
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><h6 class="dropdown-header">My Dashboard</h6></li>
                    <li><a class="dropdown-item" href="#">Dashboard</a></li>
                    <li><a class="dropdown-item" href="#">My Account</a></li>
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Change password</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Logout</a></li>
                </ul>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="container-fluid">
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="stats-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="stats-title">Lớp học</div>
                                <div class="stats-number">200</div>
                            </div>
                            <i class="bi bi-building stats-icon"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="stats-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="stats-title">Khoá học</div>
                                <div class="stats-number">7</div>
                            </div>
                            <i class="bi bi-journal-text stats-icon"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="stats-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="stats-title">Giảng viên</div>
                                <div class="stats-number">5</div>
                            </div>
                            <i class="bi bi-person-video3 stats-icon"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="stats-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="stats-title">Học viên</div>
                                <div class="stats-number">10</div>
                            </div>
                            <i class="bi bi-people stats-icon"></i>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>