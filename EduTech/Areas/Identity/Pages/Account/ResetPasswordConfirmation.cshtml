@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Xác nhận đặt lại mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <h1 class="card-title mb-4">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>@ViewData["Title"]
                    </h1>
                    <p class="card-text mb-4">
                        Mật khẩu của bạn đã được đặt lại thành công.
                    </p>
                    <a asp-page="./Login" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Bấm vào đây để đăng nhập
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



