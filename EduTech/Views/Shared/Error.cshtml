@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="text-danger">Error @Model.StatusCode</h1>
    <h2 class="text-danger">@Model.Message</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    @if (Model.StatusCode == 405)
    {
        <div class="alert alert-warning">
            <p>The requested method is not allowed for this resource.</p>
            <p>Please check if you're using the correct HTTP method (GET, POST, etc.)</p>
        </div>
    }

    @if (Context.Request.Headers["X-Requested-With"] == "XMLHttpRequest")
    {
        <div class="alert alert-info">
            <p>This appears to be an AJAX request.</p>
        </div>
    }
</div>