@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Quên xác nhận mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <h1 class="card-title mb-4">
                        <i class="bi bi-envelope-check text-primary me-2"></i>@ViewData["Title"]
                    </h1>
                    <p class="card-text mb-4">
                        Vui lòng kiểm tra email của bạn để đặt lại mật khẩu của bạn.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index","Home")" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>Trở vể trang chủ
                        </a>
                        <a asp-page="./Login" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Trở lại đăng nhập
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

