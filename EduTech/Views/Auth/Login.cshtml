@{
    ViewData["Title"] = "Login Page";
}

<style>
    body {
        font-family: 'Inter', Arial, Helvetica, 'Nimbus Sans L', sans-serif;
    }
</style>
<main class="form-signin" style="max-width: 400px; margin: auto;">
    <form>
        <img class="mb-4" src="~/logo.png" alt="" width="200" height="150" style="display: block; margin: auto;">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating mb-2">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating mb-2">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>

        <div class="checkbox mb-2">
            <a href="@Url.Action("Register", "Auth")" class="text-decoration-none text-muted">Tạo tài khoản</a>
                
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
    </form>
</main>